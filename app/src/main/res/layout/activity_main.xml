<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">
            <TextView

                android:text="用户名:"
                android:textColor="#ffff"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_width="0dp"

                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/username_edit"
                android:hint="username"
                android:singleLine="true"
                android:background="@drawable/input_box"
                android:textColor="#ffff"
                android:layout_margin="1dp"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="密码:"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:layout_marginLeft="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/passwd_edit"
                android:textColor="#ffff"
                android:background="@drawable/input_box"
                android:layout_weight="6"
                android:hint="password"
                android:singleLine="true"
                android:layout_margin="1dp"
                android:password="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>




    <TextView
        android:id="@+id/help_message"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textColor="#4cbef0"
        android:textSize="15sp"
        android:text="@string/help_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/syllabus_list_view"
        android:background="@drawable/text_box"
        android:layout_weight="1"
        android:divider="#0000"
        android:dividerHeight="0dp"
        android:footerDividersEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<EditText-->
            <!--android:id="@+id/address_edit"-->
            <!--android:textSize="15dp"-->
            <!--android:editable="true"-->
            <!--android:textColor="#ffff"-->
            <!--android:gravity="center"-->
            <!--android:visibility="invisible"-->
            <!--android:text="@string/server_address"-->
            <!--android:hint="服务器地址"-->
            <!--android:layout_margin="2dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:textColor="#ffff"
            android:id="@+id/about_text_box"
            android:gravity="center"
            android:background="@drawable/text_box"
            android:layout_gravity="center"
            android:text="@string/about_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>
